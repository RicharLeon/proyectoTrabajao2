{% extends 'base.html.twig' %}

{% block title %}Producto{% endblock %}

{% block body %}
<div class="container" class="navbar navbar-dark bg-primary"> 
<br/>
    <h1>Producto</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ producto.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ producto.code }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ producto.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ producto.description }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ producto.brand }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ producto.price }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ producto.createdAt ? producto.createdAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ producto.updatedAt ? producto.updatedAt|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-light" href="{{ path('producto_index') }}">Volve a Lista</a>

    <a class="btn btn-success" href="{{ path('producto_edit', {'id': producto.id}) }}">Editar</a> 
    <a {{ include('producto/_delete_form.html.twig') }}</a>
{% endblock %} 
